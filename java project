import javax.swing.*;
import java.awt.*;
import java.awt.event.*;
import java.util.HashMap;

public class OnlineVotingSystem extends JFrame implements ActionListener {

    // Components
    JLabel labelTitle, labelVote;
    JRadioButton candidate1, candidate2, candidate3;
    ButtonGroup group;
    JButton submitButton, resultsButton;

    // Voting data
    HashMap<String, Integer> votes = new HashMap<>();

    public OnlineVotingSystem() {
        // Initialize votes
        votes.put("Candidate 1", 0);
        votes.put("Candidate 2", 0);
        votes.put("Candidate 3", 0);

        // Frame settings
        setTitle("Online Voting System");
        setSize(400, 300);
        setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        setLocationRelativeTo(null); // Center the frame
        setLayout(new FlowLayout());

        // Title
        labelTitle = new JLabel("Welcome to Online Voting System");
        labelTitle.setFont(new Font("Arial", Font.BOLD, 16));
        add(labelTitle);

        // Voting label
        labelVote = new JLabel("Please select your candidate:");
        add(labelVote);

        // Radio buttons
        candidate1 = new JRadioButton("Candidate 1");
        candidate2 = new JRadioButton("Candidate 2");
        candidate3 = new JRadioButton("Candidate 3");

        group = new ButtonGroup();
        group.add(candidate1);
        group.add(candidate2);
        group.add(candidate3);

        add(candidate1);
        add(candidate2);
        add(candidate3);

        // Buttons
        submitButton = new JButton("Submit Vote");
        submitButton.addActionListener(this);
        add(submitButton);

        resultsButton = new JButton("Show Results");
        resultsButton.addActionListener(this);
        add(resultsButton);

        setVisible(true);
    }

    public void actionPerformed(ActionEvent e) {
        if (e.getSource() == submitButton) {
            String selectedCandidate = null;

            if (candidate1.isSelected()) selectedCandidate = "Candidate 1";
            else if (candidate2.isSelected()) selectedCandidate = "Candidate 2";
            else if (candidate3.isSelected()) selectedCandidate = "Candidate 3";

            if (selectedCandidate != null) {
                votes.put(selectedCandidate, votes.get(selectedCandidate) + 1);
                JOptionPane.showMessageDialog(this, "Thank you for voting for " + selectedCandidate + "!");
                group.clearSelection(); // Reset selection
            } else {
                JOptionPane.showMessageDialog(this, "Please select a candidate before submitting.");
            }
        } else if (e.getSource() == resultsButton) {
            String results = "Current Voting Results:\n";
            for (String candidate : votes.keySet()) {
                results += candidate + ": " + votes.get(candidate) + " votes\n";
            }
            JOptionPane.showMessageDialog(this, results);
        }
    }

    public static void main(String[] args) {
        new OnlineVotingSystem();
    }
}
